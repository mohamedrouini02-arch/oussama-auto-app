{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "default",
  "description": "Default permissions for the application",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-open",
      "allow": [
        {
          "href": ".*"
        },
        {
          "path": "$DOWNLOAD/**"
        }
      ]
    },
    "fs:allow-app-write-recursive",
    "fs:allow-app-read-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPLOCALDATA/**"
        },
        {
          "path": "$DOWNLOAD/**"
        }
      ]
    }
  ]
}
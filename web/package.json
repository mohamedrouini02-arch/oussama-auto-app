{
  "name": "web",
  "version": "0.1.2",
  "private": true,
  "main": "electron/main.js",
  "author": "Oussama Auto",
  "description": "Oussama Auto Management System",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:sw": "node scripts/build-sw.js",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && node scripts/copy-standalone.js && electron-builder",
    "electron:pack": "npm run build && node scripts/copy-standalone.js && electron-builder --dir",
    "electron:publish": "node scripts/publish.js",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build"
  },
  "build": {
    "appId": "com.OussamaAuto.app",
    "productName": "OussamaAuto",
    "asar": false,
    "files": [
      "electron/**/*",
      ".next/standalone/**/*",
      "public/**/*",
      ".next/static/**/*",
      "build/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "mohamedrouini02-arch",
        "repo": "oussama-auto"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mohamedrouini02-arch/oussama-auto.git"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@serwist/build": "^9.2.1",
    "@serwist/next": "^9.2.1",
    "@serwist/precaching": "^9.2.1",
    "@serwist/sw": "^9.2.1",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.83.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.554.0",
    "next": "^16.0.10",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-dropzone": "^14.3.8",
    "serwist": "^9.2.1",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/cli": "^2.9.4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.27.0",
    "eslint": "^9",
    "eslint-config-next": "^15.0.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}
